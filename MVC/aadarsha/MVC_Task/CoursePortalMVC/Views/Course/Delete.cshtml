@model CoursePortalMVC.Models.Course
@{
    ViewData["Title"] = "Delete Course";
}
<h2 class="text-danger">Delete Course!!!</h2>

<h3 class="text-danger">Are you sure you want to delete this course?</h3>
<hr class="border-danger" />

<div>
    <h4 class="text-bold">@Model.Title</h4>
    <dl class="row"></dl>
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Credits</dt>
        <dd class="col-sm-10">@Model.Credits</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
