@model IEnumerable<StudentManagementSystem.Models.Student>
@{
    ViewData["Title"] = "Home Page";
}
<h2>Student List</h2>
<a class="btn btn-primary" asp-action="Create" asp-controller="Student">Add New Student</a>

<table class = "table table-bordered mt-0">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>Address</th>
            <th>Semester</th>
        </tr>
    </thead>
    <tbody>
        @if(Model == null)
        {
            <p>this model is null</p>
        }
        else
        {
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Id</td>
                    <td>@s.Name</td>
                    <td>@s.age</td>
                    <td>@s.Address</td>
                    <td>@s.Semester</td>
                    <td>
                        <a asp-action="Details" asp-router-id="@s.Id" class="btn btn-info btn-sm">View</a>
                        <a asp-action="Edit" asp-router-id="@s.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-router-id="@s.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>

            }
            
        }
       
    </tbody>
</table>
