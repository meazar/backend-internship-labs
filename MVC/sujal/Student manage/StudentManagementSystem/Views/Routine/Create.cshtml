@model StudentManagementSystem.Models.Routine

<h2>Add Routine</h2>

<form asp-action="Create" asp-controller="Routine" method="post">
    <div class="form-group">
        <label>Semester</label>
        <input asp-for="Semester" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Day</label>
        <input asp-for="Day" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Time</label>
        <input asp-for="Time" class="form-control" required />
    </div>
    <div class="form-group">
        <label>SubjectName</label>
        <input asp-for="SubjectName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>TeacherName</label>
        <input asp-for="TeacherName" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success mt-2">Save</button>
</form>
